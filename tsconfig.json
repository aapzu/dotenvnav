{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "types": ["vitest/globals"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
