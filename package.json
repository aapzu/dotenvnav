{
  "name": "@aapzu/dotenvnav",
  "version": "0.0.8",
  "description": "A utility tool to store your project's local .env files in a single place, symlink them back to the project and change them to a different set of files with a single command.",
  "main": "src/index.ts",
  "type": "module",
  "bin": {
    "dotenvnav": "dist/index.js"
  },
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsup $(find src -name '*.ts' -not -path '*/__tests__/*')",
    "cli": "pnpm start",
    "test": "vitest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "dotenv"
  ],
  "author": "aapzu",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "esbuild": "^0.20.2",
    "fast-glob": "^3.3.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "loglevel": "^1.8.1",
    "tsup": "^8.0.2",
    "tsx": "^4.6.2",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20.10.5",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.0.0",
    "mock-fs": "^5.2.0",
    "prettier": "^3.1.1",
    "prettier-eslint": "^16.3.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml}": [
      "prettier --write"
    ]
  }
}
